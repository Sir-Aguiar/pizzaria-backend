{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2021",
    "strict": true,
    "module": "ES2020",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "declaration": true
  },
  "include": ["src/**/*.ts", "tests/**/*"]
}
